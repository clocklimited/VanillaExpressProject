!!!5
html(lang='en', xmlns:fb='http://ogp.me/ns/fb#')
  head
    meta(charset='utf-8')

    block title
      title SITENAME

    block seo
      meta(property='author', content='Clock Limited - www.clock.co.uk')

    block metaData
      meta(name='viewport', content='initial-scale=1.0, maximum-scale=2.0')
      meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')

      meta(name='apple-mobile-web-app-title', content='SITENAME')


    link(rel='shortcut icon', href=versionPath('/static/images/meta/favicon.ico'))

    //- iPhone
    link(rel='apple-touch-icon-precomposed', href=versionPath('/static/images/meta/apple-touch-icon-precomposed-57x57.png'), sizes='57x57')
    //- iPhone (Retina)
    link(rel='apple-touch-icon-precomposed', href=versionPath('/static/images/meta/apple-touch-icon-precomposed-114x114.png'), sizes='114x114')
    //- iPad
    link(rel='apple-touch-icon-precomposed', href=versionPath('/static/images/meta/apple-touch-icon-precomposed-72x72.png'), sizes='72x72')
    //- iPad (Retina)
    link(rel='apple-touch-icon-precomposed', href=versionPath('/static/images/meta/apple-touch-icon-precomposed-144x144.png'), sizes='144x144')

    //- Stylesheets
    block styles
      link(rel='stylesheet', href=versionPath('/static/css/index.css'))
      //if lte IE 8
        link(rel='stylesheet', href=versionPath('/static/css/index-ie8.css'))
      //if lt IE 8
        link(rel='stylesheet', href=versionPath('/static/css/index-ie7.css'))

    block headScripts
      script(src=versionPath('/static/js/lib/vendor/Modernizr.js'))

  body
    //- GA guidelines state this code must follow the opening body tag
    if (typeof properties !== 'undefined')
      script
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
          })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

          ga('create', '#{properties.analytics}', 'SITENAME.com')
          ga('send', 'pageview')

    .outer-wrap
      .inner-wrap
        block body
        .main-content
          block content

    //- Scripts
    block scripts
      script(src='//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js')
      script
        if (typeof jQuery === 'undefined') document.write('<script src="/static/js/lib/vendor/jquery-1.9.1.min.js" />')
      script(src=versionPath('/static/js/build/global.js'))
