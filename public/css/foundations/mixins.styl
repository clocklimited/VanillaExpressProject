/*
 * Image replacement
 */

ir()
  &:before
    content ''
    display block
    width 0
    height 150%
  background-color transparent
  border 0
  overflow hidden
  *text-indent -9999px
//
//  Effects
//

img-shadow(bottom = 20px, height = 15px, color=#c7c9c7)
  display block
  position relative
  &:after, &:before
    z-index -1
    content ''
    width 50%
    position absolute
    top 80%
    bottom bottom
    box-shadow 0 height 8px color
    background white

  &:after
    transform rotate(3deg)
    right 10px
    left auto
  &:before
    transform rotate(-3deg)
    left 10px
    right auto


border-alt(sides, args...)
  for side in sides
    border-{side} args

list-item-shadow()
  content ''
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background-image linear-gradient(top, rgba(0,0,0,0.35) 0%,rgba(0,0,0,0) 70%)
  pointer-events none
  transition background-image .1s ease-out
  z-index 2