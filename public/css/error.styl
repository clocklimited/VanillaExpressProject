//
// BASE STYLES
// ===========
// A very stripped back reset.
// Typographic styles should live in typography.styl
//


//
// SPACING
// Unset margins and padding, the reset for specific elements
//

html, body, p, ul, ol, li, h1, h2, h3, h4, h5, h6
  margin 0
  padding 0

h1, h2, h3, h4, h5, h6
  margin-bottom 1em

p, ul, ol
  margin-bottom 1.5em


//
// BASIC ELEMENTS
//

body
  background #fff


//
// MEDIA
//

img
  border 0

img, object
  vertical-align bottom

// Responsive images
img
  max-width 100%
  width auto
  height auto


//
// TYPOGRAPHIC STYLES
// ==================
//


//
// BASE STYLES
//

body
  font-family Arial, sans-serif
  font-size 100%
  line-height 1.6
  font-weight normal
  color #777


//
// HEADINGS
//

h1, h2, h3, h4, h5, h6
  font-family $headingFontFamily
  font-weight bold
  line-height 1
  color #222

h1
  font-size 2.375em
  margin-bottom 2em
h2
  font-size 1.6em
h3
  font-size 1.4em
h4
  font-size 1.2em
h5
  font-size 1.1em
h6
  font-size 1em


//
// LINKS
//

a
  text-decoration underline

  &:focus,
  &:hover,
  &:active
    color #222
    text-decoration underline



//
// STRUCTURAL STYLES
// =================
//

.centering
  margin-left auto
  margin-right auto
  max-width 30em
  padding-left 1em
  padding-right 1em
  padding-top 100px
  text-align center


@media screen and (max-width: 480px)
  .centering
    padding-top 40px

  h1
    margin-bottom 1em